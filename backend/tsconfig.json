{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"lib": ["ES2020"],
		"rootDir": "./src",
		"outDir": "./dist",

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,

		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "src/index.ts"],
	"exclude": ["node_modules"]
}
